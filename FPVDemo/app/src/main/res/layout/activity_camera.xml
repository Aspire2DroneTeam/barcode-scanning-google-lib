<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextureView
        android:id="@+id/video_previewer_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/linearLayout_ISO"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/radioButtons_ISO"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/ISO_800"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorOrangeRadio"
                android:onClick="onRadioButtonClickedISO"
                android:paddingLeft="15dp"
                android:text="ISO_800"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/ISO_1600"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorOrangeRadio"
                android:onClick="onRadioButtonClickedISO"
                android:paddingLeft="15dp"
                android:text="ISO_1600"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/ISO_3200"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorOrangeRadio"
                android:onClick="onRadioButtonClickedISO"
                android:paddingLeft="15dp"
                android:text="ISO_3200"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/ISO_6400"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorOrangeRadio"
                android:onClick="onRadioButtonClickedISO"
                android:paddingLeft="15dp"
                android:text="ISO_6400"
                android:textColor="@color/colorWhite"
                android:checked="true"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/ISO_12800"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorOrangeRadio"
                android:onClick="onRadioButtonClickedISO"
                android:paddingLeft="15dp"
                android:text="ISO_12800"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_aperture"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="19dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/radioButtons_aperture"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/F_6_DOT_3"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorOrangeRadio"
                android:onClick="onRadioButtonClickedAperture"
                android:text="F_6_DOT_3"
                android:textColor="@color/colorWhite"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/F_7_DOT_1"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorOrangeRadio"
                android:onClick="onRadioButtonClickedAperture"
                android:paddingRight="15dp"
                android:text="F_7_DOT_1"
                android:textColor="@color/colorWhite"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/F_8"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorOrangeRadio"
                android:onClick="onRadioButtonClickedAperture"
                android:paddingRight="15dp"
                android:text="F_8"
                android:textColor="@color/colorWhite"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/F_9"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorOrangeRadio"
                android:onClick="onRadioButtonClickedAperture"
                android:paddingRight="15dp"
                android:text="F_9"
                android:textColor="@color/colorWhite"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:checked="true"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/F_10"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorOrangeRadio"
                android:onClick="onRadioButtonClickedAperture"
                android:paddingRight="15dp"
                android:text="F_10"
                android:textColor="@color/colorWhite"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textSize="20sp" />
        </RadioGroup>

    </LinearLayout>


</RelativeLayout>
