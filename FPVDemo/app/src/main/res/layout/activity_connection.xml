<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="137dp"
            android:layout_height="39dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="68dp"
            android:layout_height="24dp"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/action_settings"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_light"
            android:text="@string/action_disconnected"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/img_status"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/oval_dis" />

        <ImageView
            android:id="@+id/set"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/settings_button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center"
        android:orientation="horizontal"
        android:paddingBottom="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_auto"
                    android:layout_width="154dp"
                    android:layout_height="154dp"
                    android:src="@drawable/auto_on_button_dis" />

                <TextView
                    android:id="@+id/text_auto"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/btn_start_a"
                    android:textColor="@color/colorGrayTextDisable"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_manual"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/auto_on_button_dis" />

                <TextView
                    android:id="@+id/text_manual"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_horizontal"
                    android:text="@string/btn_start_m"
                    android:textColor="@color/colorGrayTextDisable"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
